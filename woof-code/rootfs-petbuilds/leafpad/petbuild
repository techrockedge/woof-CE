download() {
    [ -f leafpad-0.8.17.tar.gz ] || wget -t 1 -T 15 https://savannah.nongnu.org/download/leafpad/leafpad-0.8.17.tar.gz
}

build() {
    tar -xzf leafpad-0.8.17.tar.gz
    cd leafpad-0.8.17
    ./configure --prefix=/usr --disable-chooser --disable-print
    make install
    sed 's/^Categories=.*/Categories=TextEditor;/' -i /usr/share/applications/leafpad.desktop
}