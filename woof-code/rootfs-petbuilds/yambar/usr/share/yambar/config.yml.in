bar:
  height: 26
  location: top
  spacing: 5
  layer: top

  font: DejaVuSans:pixelsize=14

  foreground: FOREGROUNDff
  background: BACKGROUNDff

  border:
    width: 1
    color: OUTLINEff
    top-margin: 0

  left:
    - label:
        content:
          - string: { on-click: defaultrun, text: Applications, left-margin: 2 }
    - label:
        content:
          - string: { on-click: pmount, text: Places, left-margin: 2 }
    - label:
        content:
          - string: { on-click: defaultfilemanager, text: 🗄️}
    - label:
        content:
          - string: { on-click: defaultbrowser, text: 🌎️}
    - label:
        content:
          - string: { on-click: defaultterminal, text: 🖥}
    - foreign-toplevel:
        content:
          map:
            tag: activated
            values:
              true:
                - string: {text: "{title}"}

  right:
    - battery:
        name: BAT0
        poll-interval: 15
        content:
          string: {text: "🔋{capacity}%"}
    - alsa:
        card: default
        mixer: Master
        content:
          map:
            tag: online
            values:
              false: {string: {text: 🔇}}
              true:
                map:
                  on-click: defaultaudiomixer
                  tag: muted
                  values:
                    true: {string: {text: 🔇}}
                    false:
                      ramp:
                        tag: volume
                        items:
                          - string: {text: "🔈{percent}%"}
                          - string: {text: "🔉{percent}%"}
                          - string: {text: "🔊{percent}%"}
    - script:
        path: /usr/bin/netmon
        content:
          map:
            on-click: defaultconnect
            tag: state
            default: {string: {text: 🚫}}
            values:
              ready: {string: {text: 🌐}}
    - label:
        content:
          string:
            on-click: logout_gui
            text: 🚪
    - clock:
        time-format: "%H:%M"
        content:
          - string: {on-click: defaultcalendar, text: "{time}", right-margin: 2}
