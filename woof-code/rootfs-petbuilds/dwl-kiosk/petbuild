download() {
    [ -f dwl-72e0a560d9836c5e8658003f548203bcd722e565.zip ] || wget -t 3 -T 60 -O dwl-72e0a560d9836c5e8658003f548203bcd722e565.zip https://github.com/djpohly/dwl/archive/72e0a560d9836c5e8658003f548203bcd722e565.zip
}

build() {
    unzip dwl-72e0a560d9836c5e8658003f548203bcd722e565.zip
    cd dwl-72e0a560d9836c5e8658003f548203bcd722e565
    patch -p1 < ../dwl-kiosk.patch
    sed -e s/^#XWAYLAND/XWAYLAND/ -e s/^#XLIBS/XLIBS/ -i config.mk
    cp -f ../config.h .
    make
    install -D -m 755 dwl /usr/bin/dwl-kiosk
}